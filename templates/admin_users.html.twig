<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        {{ include('navbar.html.twig') }}

        {% if users|length > 0 %}
            <h2 style="margin-top: 50px;text-align: center">Пользователи</h2>
            <table style="margin-top: 50px" class="table table-bordered table-hover table-dark">
                <tr>
                    <th>#</th>
                    <th>Никнейм</th>
                    <th>E-mail</th>
                    <th>Действия</th>
                </tr>
                {% for user in users %}
                    <tr>
                        <th>{{ user.id }}</th>
                        <th>{{ user.username }}</th>
                        <th>{{ user.email }}</th>
                        <th>
                            <form method="POST" action="http://localhost:8000/users-block">
                                <input type="hidden" name="user_id" value="{{ user.id }}">
                                <input type="submit" class="btn btn-danger" value="Удалить">
                            </form>
                        </th>
                    </tr>
                {% endfor %}
            </table>
        {% else %}
            <h2 style="margin-top: 50px;text-align: center">Пока что пользователей нет в базе</h2>
        {% endif %}
    </body>
</html>