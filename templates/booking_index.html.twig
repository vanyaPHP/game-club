<html>
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    </head>
    <body>
        {{ include('navbar.html.twig') }}

        <form method="POST" action="http://localhost:8000/booking-request-store" style="margin-top: 50px;width: 30%;margin-left: 650px">
            <h2>Бронирование места</h2>
            <div class="mb-3">
                <label for="service_id" class="form-label">Услуга</label>
                <select name="service_id" class="form-select">
                    {% for service in services %}
                        <option value="{{ service.id }}"
                                {% if service.id == selected_service %}
                                    selected
                                {% endif %}
                        >
                            {{ service.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="mb-3">
                <label for="room_id" class="form-label">Комната</label>
                <select name="room_id" class="form-select">
                    {% for room in rooms %}
                        <option value="{{ room.id }}">{{ room.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="mb-3">
                <label for="playersNumber" class="form-label">Количество игроков</label>
                <input type="text" class="form-control" name="playersNumber" id="playersNumber">
            </div>
            <div class="mb-3">
                <label for="requestDate" class="form-label">Дата брони</label>
                <input type="date" class="form-control" name="requestDate" id="requestDate">
            </div>
            <div class="mb-3">
                <label for="requestTime" class="form-label">Время брони</label>
                <input type="time" class="form-control" step="3600" name="requestTime" id="requestTime">
            </div>
            <button type="submit" class="btn btn-primary">Оставить заявку на бронирование</button>
        </form>
    </body>
</html>